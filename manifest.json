{
  "manifest_version": 3,
  "name": "ClaimStream",
  "version": "1.0.0",
  "description": "Verify claims in YouTube videos with real-time fact-checking",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ClaimStream - Analyze Claims"
  },
  "web_accessible_resources": [
    {
      "resources": ["config.js", "supabase-client.js", "supabase.js"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["config.js", "supabase-client.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
